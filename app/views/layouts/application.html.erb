
<!DOCTYPE html>
<html>
<head>
  <title>Hospital</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div class="search-box">
    <%= form_tag search_hospital_pricings_path do %>
      <%= text_field_tag :hospital_info, nil, :placeholder=>"General Search", :id => "search_box" %><br>
      <%= text_field_tag :procedure, nil, :placeholder=>"Procedure Search", :id => "search_box" %><br>
      <%= text_field_tag :zip, nil, :placeholder=>"Zipcode Search", :id => "search_box" %><br>
      <%= submit_tag "Search" %>  
    <% end %>
</div> 
<%= yield %>

</body>
</html>